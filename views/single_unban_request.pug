extends layout

block content
    h1.text-center Ban appeal by<br />#{userName}
        div#border(class="border-"+resolution value=resolution).pb-3.mt-3
            if isDiscord === 'true'
                div.mt-3.mb-0
                    p.text-question Discord tag
                    div.border-box.mt-1
                        p.text #{userName}
            else
                div.mt-3.mb-0
                    p.text-question Twitch name
                    div.border-box.mt-1
                        p.text #{userName}
            div.mt-3.mb-0
                p.text-question When were you banned?
                div.border-box.mt-1
                    case howLongAgo
                        when 1
                            p.text Less than 6 months ago
                        when 2
                            p.text Around 6 months ago
                        when 3
                            p.text 1 year ago
                        when 4
                            p.text 2 years ago
                        when 5
                            p.text Over 3 years ago
            div.mt-3.mb-0
                p.text-question Do you think your suspension was justified?
                div.border-box.mt-1
                    case isJustified
                        when 1
                            p.text Yes
                        when 2
                            p.text No
            div.mt-3.mb-0
                p.text-question Why did you get banned?
                div.border-box.mt-1
                    p.text #{banReason}
            div.mt-3.mb-0
                p.text-question Why do you think you should get unbanned?
                div.border-box.mt-1
                    p.text #{unbanReason}
            div.mt-3.mb-0
                p.text-question Anything else you want to add?
                div.border-box.mt-1
                    p.text #{notes}
        div
            if resolution == 'u'
                a.btn.btn-sm.btn-outline-success.mod-action(data-id=_id value='a' mod-action='/unban') Accept
                a.btn.btn-sm.btn-outline-danger.mod-action.ms-2(data-id=_id value='d' mod-action='/unban') Deny
            if resolution == 'd'
                a.btn.btn-sm.btn-outline-danger.mod-action(data-id=_id value='u' mod-action='/unban') un-Deny